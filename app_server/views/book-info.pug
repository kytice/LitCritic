extends layout
include _includes/sharedHTMLfunctions

block content
  .container.mt-4
    .row
      .col-12.col-md-8
        +bookCard(book)
        .card.shadow-sm.mb-4
          .card-body
            .d-flex.justify-content-between.align-items-center.mb-4
              h5.card-title.mb-0 Quotes
            if quotes && quotes.length > 0
              each quote in quotes
                .quote.mb-3.pb-3.border-bottom
                  .d-flex.justify-content-between.align-items-center.mb-2
                    p.mb-0.fst-italic= `"${quote.text}"`
            else
              p.text-muted.text-center No quotes available for this book.
      .col-12.col-md-4
        .card.bg-light.shadow-sm
          .card-body
            p.lead.mb-3= sidebar.mainText
            p= sidebar.callToAction